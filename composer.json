{
  "name": "cleentfaar/mailer",
  "description": "Build, render and send e-mails with ease",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Cas Leentfaar",
      "homepage": "https://github.com/cleentfaar"
    }
  ],
  "keywords": [
    "mail"
  ],
  "require": {
    "php": "^7.1",
    "symfony/http-foundation": "^3.0",
    "symfony/options-resolver": "^3.0",
    "symfony/templating": "^3.0",
    "symfony/translation": "^3.0",
    "soundasleep/html2text": "^0.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.5",
    "beberlei/assert": "^2.7",
    "friendsofphp/php-cs-fixer": "^2.0",
    "adlawson/vfs": "^0.12"
  },
  "suggest": {
    "cleentfaar/mailer-swiftmailer": "If you want to use the (recommended) Swiftmailer driver for sending e-mails"
  },
  "autoload": {
    "psr-4": {
      "CL\\Mailer\\": "src/CL/Mailer"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CL\\Mailer\\Tests\\": "tests/CL/Mailer/Tests"
    }
  }
}
